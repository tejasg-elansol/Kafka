<?xml version="1.0" encoding="utf-8"?>
<project>
  <!-- Kafka connection -->
  <kafka>
    <bootstrap_servers>192.168.0.56:9092</bootstrap_servers>
    <!-- default topic names mapping -->
    <topics>
      <topic usecase="PPE">safety.ppe</topic>
      <topic usecase="FIRE">safety.fire</topic>
      <topic usecase="FALL">safety.fall</topic>
      <topic usecase="VEHICLE">safety.vehicle</topic>
      <topic usecase="EXIT">safety.exit</topic>
      <topic usecase="CROWD">safety.crowd</topic>
    </topics>
  </kafka>

  <!-- Models paths for different detectors -->
  <models>
    <model usecase="PPE">/home/scout/scout_devlopment_vision/model/ppe.pt</model>
    <!-- model usecase="FIRE">/home/scout/models/fire_smoke.pt</! -->
    <!-- add more models for new usecases -->
  </models>

  <!-- Camera / streaming defaults (can be overridden per maintester) -->
  <camera>
    <default_rtsp>rtsp://admin:Elansol%402020@192.168.0.94:554/Streaming/Channels/101</default_rtsp>
    <default_camera_id>CAM_001</default_camera_id>
  </camera>

  <!-- Logging config -->
  <logging>
    <log_dir>logs</log_dir>
    <max_bytes>5242880</max_bytes>  <!-- 5 MB -->
    <backup_count>3</backup_count>
  </logging>

  <!-- Frame encoding settings -->
  <frame>
    <width>320</width>
    <height>320</height>
    <jpeg_quality>85</jpeg_quality>
  </frame>

</project>
